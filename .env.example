# Puerto del servidor
PORT=3001

# Configuración de la base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gym_app
DB_USER=tu_usuario_db
DB_PASSWORD=tu_contraseña_db

# JWT Secret (genera uno seguro)
JWT_SECRET=tu_jwt_secret_muy_seguro_cambiame

# Entorno (development, production)
NODE_ENV=development

# CORS Origins (URLs permitidas para hacer peticiones)
CORS_ORIGIN=http://localhost:3000,http://192.168.1.47:8081

# Configuración de archivos
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
IMAGES_PATH=./public/images

# Configuración de logging
LOG_LEVEL=info

# Base URL para imágenes (cambiar por tu dominio en producción)
BASE_IMAGE_URL=http://localhost:3001/images